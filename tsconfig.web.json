{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./packages/*"]
    },
    "ignoreDeprecations": "5.0",  // 新增
    "verbatimModuleSyntax": true  // 替代弃用选项
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "typings/env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/dist/**",
    "**/__tests__/**/*",
    "**/gulpfile.ts",
    "**/test-helper",
    "packages/test-utils",
    "**/*.md"
  ]
}
